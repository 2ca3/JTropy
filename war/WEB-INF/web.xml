<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Random</servlet-name>
		<servlet-class>com.appspot.jtropy.RandomServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MakeIn</servlet-name>
		<servlet-class>com.appspot.jtropy.MakeInServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MakeOut</servlet-name>
		<servlet-class>com.appspot.jtropy.MakeOutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Random</servlet-name>
		<url-pattern>/t</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MakeIn</servlet-name>
		<url-pattern>/c</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MakeIn</servlet-name>
		<url-pattern>/e</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MakeOut</servlet-name>
		<url-pattern>/s</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>jsp/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
